<%= render 'show_translation', checklist: @checklist, language: @language, original_checklist: @original_checklist %>
<%= form_tag(overwrite_translation_admin_checklist_path(id: @original_checklist.id), multipart: true) do %>
  <label for="name">Checklist Name: </label><%= text_field_tag :name, @checklist.name, { placeholder: 'Checklist name' } %>
  <%= hidden_field_tag :language, @language %>
  <%= submit_tag 'Update' %>
<% end %>