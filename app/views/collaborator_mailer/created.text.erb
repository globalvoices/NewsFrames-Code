<%= render 'shared/mailer/greeting', user: @user %>
<%= t('collaborators.mail.invited', name: @project.name) %>
<% if @invitation_token.present? %>
<%= t('mail.invite.accept', link: accept_invitation_url(@user, invitation_token: @invitation_token)) %>
